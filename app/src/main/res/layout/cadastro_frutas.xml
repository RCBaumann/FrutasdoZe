<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header_cadastro"
        android:layout_width="370dp"
        android:layout_height="85dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/header"
        android:fontFamily="@font/bevan"
        android:gravity="center"
        android:text="CADASTRAR"
        android:textAlignment="center"
        android:textColor="#FF6D00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="99dp"
        android:layout_height="61dp"
        android:layout_weight="1"
        android:src="@drawable/cadastro"
        app:layout_constraintBottom_toBottomOf="@+id/header_cadastro"
        app:layout_constraintStart_toStartOf="@+id/header_cadastro"
        app:layout_constraintTop_toTopOf="@+id/header_cadastro" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/header_cadastro"
        app:layout_constraintStart_toStartOf="@+id/header_cadastro"
        app:layout_constraintTop_toBottomOf="@+id/header_cadastro"
        android:background="#AED260">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="nome da fruta" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tipo da fruta" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="data validade" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="quantidade" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="peso" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="valor" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />


                            </com.google.android.material.textfield.TextInputLayout>
                        </com.google.android.material.textfield.TextInputLayout>
                    </com.google.android.material.textfield.TextInputLayout>
                </com.google.android.material.textfield.TextInputLayout>
            </com.google.android.material.textfield.TextInputLayout>

        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btn_add"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#7CB342"
        android:text="Adicionar"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/header_cadastro"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btn_edit"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:text="Editar"
        android:textSize="12dp"
        android:backgroundTint="#7CB342"
        app:layout_constraintEnd_toStartOf="@+id/btn_delete"
        app:layout_constraintStart_toEndOf="@+id/btn_add"
        app:layout_constraintTop_toTopOf="@+id/btn_add"
        android:visibility="visible"/>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:text="Remover"
        android:textSize="12dp"
        android:backgroundTint="#E53935"
        app:layout_constraintEnd_toEndOf="@+id/header_cadastro"
        app:layout_constraintTop_toTopOf="@+id/btn_edit"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>