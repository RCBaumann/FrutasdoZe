<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#D8E8D8">


    <TextView
        android:id="@+id/header"
        android:layout_width="370dp"
        android:layout_height="85dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/container_header"
        android:fontFamily="@font/bevan"
        android:gravity="center"
        android:textAlignment="center"
        android:text="FRUTEIRA DO ZÃ‰"
        android:textColor="#FF6D00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="99dp"
        android:layout_height="61dp"
        android:layout_weight="1"
        android:src="@drawable/logo_icon"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toTopOf="@+id/header" />

    <AutoCompleteTextView
        android:id="@+id/pesquisarFruta"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:hint="Pesquisar"
        android:text=""
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnBuscar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/buscar_icon"
        android:text=""
        app:layout_constraintBottom_toBottomOf="@+id/pesquisarFruta"
        app:layout_constraintEnd_toEndOf="@+id/header"
        app:layout_constraintStart_toEndOf="@+id/pesquisarFruta" />


    <ListView
        android:id="@+id/listaFrutas"
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/container_infos"
        android:backgroundTint="#C8E6C9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pesquisarFruta" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAddProduto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/add_produto_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="@+id/listaFrutas"
        app:layout_constraintTop_toBottomOf="@+id/listaFrutas" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditarProduto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/editar_lista_icon"
        app:layout_constraintEnd_toEndOf="@+id/listaFrutas"
        app:layout_constraintTop_toTopOf="@+id/btnAddProduto" />


</androidx.constraintlayout.widget.ConstraintLayout>