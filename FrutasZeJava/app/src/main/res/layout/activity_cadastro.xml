<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header_cadastro"
        android:layout_width="370dp"
        android:layout_height="85dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/container_header"
        android:gravity="center"
        android:text="CADASTRAR"
        android:textAlignment="center"
        android:textColor="#FF6D00"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="99dp"
        android:layout_height="61dp"
        android:layout_weight="1"
        android:src="@drawable/cadastro_icon"
        app:layout_constraintBottom_toBottomOf="@+id/header_cadastro"
        app:layout_constraintStart_toStartOf="@+id/header_cadastro"
        app:layout_constraintTop_toTopOf="@+id/header_cadastro" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="@+id/header_cadastro"
        app:layout_constraintStart_toStartOf="@+id/header_cadastro"
        app:layout_constraintTop_toBottomOf="@+id/header_cadastro"
        android:background="#AED260">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do Produto" />

        <EditText
            android:id="@+id/nome_fruta_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Digite o Nome"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo do Produto" />

        <EditText
            android:id="@+id/tipo_fruta_cadastro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fruta ou Verdura"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data de validade" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DD/MM/AA"/>

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quantidade" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unidades"/>

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Peso" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kg"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="R$"/>




    </LinearLayout>


    <Button
        android:id="@+id/btn_add_cadastro"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#7CB342"
        android:text="Adicionar"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/linear_layout"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        android:visibility="visible"/>


    <Button
        android:id="@+id/btn_remove_cadastro"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:text="Remover"
        android:textSize="12dp"
        android:backgroundTint="#E53935"
        app:layout_constraintEnd_toEndOf="@+id/linear_layout"
        app:layout_constraintTop_toTopOf="@+id/btn_add_cadastro"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>